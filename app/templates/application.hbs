{{#paper-sidenav-container class="inner-sidenav"}}
  {{#paper-sidenav
     class="md-whiteframe-z2 side-navigation"
     name="left"
     open=leftSideBarOpen
     onToggle=(action (mut leftSideBarOpen))}}
    {{#paper-toolbar}}
      {{#paper-toolbar-tools class="toolbar-title"}}
        {{#link-to 'index'}}
          The Apothecary Shoppe
        {{/link-to}}
      {{/paper-toolbar-tools}}
    {{/paper-toolbar}}
    {{#paper-list}}
      {{#paper-item
         onClick=(transition-to "menu")
         class=(concat "menu-list-item" (if (eq "menu" currentRouteName) ' active'))}}
        Menu
      {{/paper-item}}
      {{#paper-item
         onClick=(transition-to "location-and-hours")
         class=(concat "menu-list-item" (if (eq "location-and-hours" currentRouteName) ' active'))}}
        Location and Hours
      {{/paper-item}}
      {{#paper-item
         onClick=(transition-to "our-story")
         class=(concat "menu-list-item" (if (eq "our-story" currentRouteName) ' active'))}}
        Our Story
      {{/paper-item}}
      {{#paper-item
         onClick=(transition-to "deliveries")
         class=(concat "menu-list-item" (if (eq "deliveries" currentRouteName) ' active'))}}
        Deliveries
      {{/paper-item}}
      {{#paper-item
         onClick=(transition-to "events")
         class=(concat "menu-list-item" (if (eq "events" currentRouteName) ' active'))}}
        Events
      {{/paper-item}}
      {{#paper-item
         onClick=(transition-to "clinical-trials")
         class=(concat "menu-list-item" (if (eq "clinical-trials" currentRouteName) ' active'))}}
        Clinical Trials
      {{/paper-item}}
      {{#paper-item
         onClick=(transition-to "craft-cannabis")
         class=(concat "menu-list-item" (if (eq "craft-cannabis" currentRouteName) ' active'))}}
        Craft Cannabis
      {{/paper-item}}
      {{#paper-item
         onClick=(transition-to "soothing-remedies")
         class=(concat "menu-list-item" (if (eq "soothing-remedies" currentRouteName) ' active'))}}
        Soothing Remedies
      {{/paper-item}}
      {{#paper-item
         onClick=(transition-to "staff")
         class=(concat "menu-list-item" (if (eq "staff" currentRouteName) ' active'))}}
        Staff
      {{/paper-item}}
      {{#paper-item
         onClick=(transition-to "gallery")
         class=(concat "menu-list-item" (if (eq "gallery" currentRouteName) ' active'))}}
        Gallery
      {{/paper-item}}
      {{#paper-item
         onClick=(transition-to "jobs")
         class=(concat "menu-list-item" (if (eq "jobs " currentRouteName) ' active'))}}
        Jobs
      {{/paper-item}}
      {{#paper-item}}
        <a href="https://knowledgebase.theapothecaryshoppe.com" target="_blank">
          Knowledgebase
        </a>
      {{/paper-item}}
      {{#paper-item class="layout-row"}}
        <a class="flex-25" href="https://www.snapchat.com/add/mramhawkins" target="_blank">
          {{fa-icon "snapchat" size=2}}
        </a>
        <a class="flex-25" href="https://www.facebook.com/TheApothecaryShoppeLV"
           target="_blank">
          {{fa-icon "facebook" size=2}}
        </a>
        <a class="flex-25" href="https://medium.com/the-apothecary-shoppe" target="_blank">
          {{fa-icon "medium" size=2}}
        </a>
        <a class="flex-25" href="https://twitter.com/mramhawkins" target="_blank">
          {{fa-icon "twitter" size=2}}
        </a>
      {{/paper-item}}
    {{/paper-list}}
  {{/paper-sidenav}}

  {{#paper-card-content class="flex"}}
    {{outlet}}
  {{/paper-card-content}}
{{/paper-sidenav-container}}
