{{#paper-sidenav
   class="md-whiteframe-z2"
   name="left"
   open=leftSideBarOpen
   onToggle=(action (mut leftSideBarOpen))}}
  {{#paper-toolbar tall=true}}
    {{#paper-toolbar-tools class="toolbar-title"}}
      {{#link-to 'index'}}
        The Apothecary Shoppe
      {{/link-to}}
    {{/paper-toolbar-tools}}
  {{/paper-toolbar}}
  {{#paper-list}}
    {{currentRouteName}}
    {{#paper-item
       active=(is-active "menu" currentRouteName)
       onClick=(transition-to "menu")
       class=(concat "menu-list-item" (if active ' active'))}}
      Menu
    {{/paper-item}}
    {{#paper-item class='menu-list-item'}}
      {{#paper-content padding=true}}
        {{link-to 'Location and Hours' 'location-and-hours'}}
      {{/paper-content}}
    {{/paper-item}}
    {{#paper-item class='menu-list-item'}}
      {{#paper-content padding=true}}
        {{link-to 'Our Story' 'our-story'}}
      {{/paper-content}}
    {{/paper-item}}
    {{#paper-item class='menu-list-item'}}
      {{#paper-content padding=true}}
        {{link-to 'Deliveries' 'deliveries'}}
      {{/paper-content}}
    {{/paper-item}}
    {{#paper-item class='menu-list-item'}}
      {{#paper-content padding=true}}
        {{link-to 'Clinical Trials' 'clinical-trials'}}
      {{/paper-content}}
    {{/paper-item}}
    {{#paper-item class='menu-list-item'}}
      {{#paper-content padding=true}}
        {{link-to 'Craft Cannibus' 'craft-cannibus'}}
      {{/paper-content}}
    {{/paper-item}}
    {{#paper-item class='menu-list-item'}}
      {{#paper-content padding=true}}
        {{link-to 'Soothing Remedies' 'soothing-remedies'}}
      {{/paper-content}}
    {{/paper-item}}
    {{#paper-item class='menu-list-item'}}
      {{#paper-content padding=true}}
        {{link-to 'Specials' 'specials'}}
      {{/paper-content}}
    {{/paper-item}}
    {{#paper-item class='menu-list-item'}}
      {{#paper-content padding=true}}
        {{link-to 'Patients' 'patients'}}
      {{/paper-content}}
    {{/paper-item}}
    {{#paper-item class='menu-list-item'}}
      {{#paper-content padding=true}}
        {{link-to 'Gallery' 'gallery'}}
      {{/paper-content}}
    {{/paper-item}}
    {{#paper-item class='menu-list-item'}}
      {{#paper-content padding=true}}
        {{link-to 'FAQ' 'faq'}}
      {{/paper-content}}
    {{/paper-item}}
  {{/paper-list}}
{{/paper-sidenav}}
